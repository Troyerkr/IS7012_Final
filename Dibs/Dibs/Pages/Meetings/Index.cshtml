@page
@model Dibs.Pages.Meetings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Meetings</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].MeetDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].MeetingSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].MeetingUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meeting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingUser.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomNum)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
