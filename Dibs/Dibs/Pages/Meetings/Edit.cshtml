@page
@model Dibs.Pages.Meetings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Meeting: @Html.DisplayFor(model => model.Meeting.Title)</h1>

<h4>Meeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Meeting.Id" />
            <div class="form-group">
                <label asp-for="Meeting.Title" class="control-label"></label>
                <input asp-for="Meeting.Title" class="form-control" />
                <span asp-validation-for="Meeting.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.MeetDate" class="control-label"></label>
                <input asp-for="Meeting.MeetDate" class="form-control" />
                <span asp-validation-for="Meeting.MeetDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.NumOfInvites" class="control-label"></label>
                <input asp-for="Meeting.NumOfInvites" class="form-control" />
                <span asp-validation-for="Meeting.NumOfInvites" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.Notes" class="control-label"></label>
                <textarea asp-for="Meeting.Notes" class="form-control"></textarea>
                <span asp-validation-for="Meeting.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.MeetingUserId" class="control-label"></label>
                <select asp-for="Meeting.MeetingUserId" class="form-control" asp-items="ViewBag.MeetingUserId"></select>
                <span asp-validation-for="Meeting.MeetingUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.RoomId" class="control-label"></label>
                <select asp-for="Meeting.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Meeting.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
