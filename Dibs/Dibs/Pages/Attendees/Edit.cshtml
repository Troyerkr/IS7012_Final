@page
@model Dibs.Pages.Attendees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Invitation</h1>

<h4>Attendee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Attendee.Id" />
            <div class="form-group">
                <label asp-for="Attendee.MeetingUserId" class="control-label"></label>
                <select asp-for="Attendee.MeetingUserId" class="form-control" asp-items="ViewBag.MeetingUserId"></select>
                <span asp-validation-for="Attendee.MeetingUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendee.MeetingId" class="control-label"></label>
                <select asp-for="Attendee.MeetingId" class="form-control" asp-items="ViewBag.MeetingId"></select>
                <span asp-validation-for="Attendee.MeetingId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attendee.IsAttending" /> @Html.DisplayNameFor(model => model.Attendee.IsAttending)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Attendee.Message" class="control-label"></label>
                <textarea asp-for="Attendee.Message" class="form-control"></textarea>
                <span asp-validation-for="Attendee.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
