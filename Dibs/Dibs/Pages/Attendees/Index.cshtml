@page
@model Dibs.Pages.Attendees.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Invitations</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].MeetingUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].Meeting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].IsAttending)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendee[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Attendee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meeting.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAttending)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
