@page
@model Dibs.Pages.MeetingUsers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Welcome @Html.DisplayFor(model => model.MeetingUser.FirstName)</h1>
<hr />
<div>


    <div class="row">
        <div class="col">
            <h4>User Information</h4>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MeetingUser.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MeetingUser.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MeetingUser.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MeetingUser.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MeetingUser.Phone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MeetingUser.Phone)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MeetingUser.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MeetingUser.Email)
                </dd>
            </dl>
            <div class="row">
                <a class="btn btn-warning btn-lg btn-block" asp-page="./Edit" asp-route-id="@Model.MeetingUser.Id" >Edit User Information</a>
            </div>
        </div>
        <div class="col">
            <h4>Hosted Meetings</h4>
            @if (Model.MeetingUser.Meetings.Any())
            {
            <table class="table">
                <thead>
                    <tr>
                        <th>Meeting Name</th>
                        <th>Date</th>
                        <th>Meeting Size</th>
                        <th>Room</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.MeetingUser.Meetings)
                {
                    <tr>
                        <td>@Html.DisplayFor(ModelItem => item.Title)</td>
                        <td>@Html.DisplayFor(ModelItem => item.MeetDate)</td>
                        <td>@Html.DisplayFor(ModelItem => item.MeetingSize)</td>
                        <td>@Html.DisplayFor(ModelItem => Model.AllRooms[item.RoomId - 1].RoomNum)</td>
                        <td><a class="btn btn-success" asp-page="./StartMeeting" asp-route-id="@item.Id">Start</a></td>
                    </tr>
                }
                </tbody>
                <tfoot></tfoot>
            </table>
            }
            else
            {
                <div class="alert alert-warning"> 
                    No Meetings yet.
                    <hr />
                    <a class="btn btn-warning" asp-area="" asp-page="/Meetings/Create">Create Meeting</a>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class=" col">
            <h4>Meeting Invitations</h4>
            @if (Model.MeetingUser.Attendees.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Room</th>
                            <th>RSVP</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.MeetingUser.Attendees)
                    {
                        <tr>
                            <td>@Html.DisplayFor(ModelItem => Model.AllMeetings[item.NonNullMeetingId - 1].Title)</td>
                            <td>@Html.DisplayFor(ModelItem => Model.AllMeetings[item.NonNullMeetingId - 1].MeetDate)</td>
                            <td>@Html.DisplayFor(ModelItem => Model.AllRooms[Model.AllMeetings[item.NonNullMeetingId - 1].RoomId-1].RoomNum)</td>
                            <td>
                                @if (item.IsAttending)
                                {
                                    <span class="badge badge-pill badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge badge-pill badge-danger">No</span>
                                }
                            </td>
                            <td>
                                <a class="badge badge-pill badge-warning" asp-page="./RSVP" asp-route-id="@item.Id">Edit</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">
                    No Invitations yet.
                </div>
            }
        </div>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
